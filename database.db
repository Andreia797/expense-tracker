import sqlite3

conn = sqlite3.connect('database.db')  # Cria o arquivo database.db
cursor = conn.cursor()

# Criação da tabela transactions
cursor.execute('''CREATE TABLE IF NOT EXISTS transactions (
                    id INTEGER PRIMARY KEY AUTOINCREMENT,
                    type TEXT,
                    category TEXT,
                    amount REAL,
                    date TEXT)''')

conn.commit()
conn.close()
